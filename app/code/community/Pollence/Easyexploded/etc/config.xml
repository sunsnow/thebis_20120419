    <global>
        <models>
            <easyexploded>
                <class>Pollence_Easyexploded_Model</class>
                <resourceModel>easyexploded_mysql4</resourceModel>
            </easyexploded>
            <easyexploded_mysql4>
                <class>Pollence_Easyexploded_Model_Mysql4</class>
                <entities>
                    <easyexploded>
                        <table>easyexploded</table>
                    </easyexploded>
                </entities>
            </easyexploded_mysql4>
        </models>
        <resources>
            <easyexploded_setup>
                <setup>
                    <module>Pollence_Easyexploded</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </easyexploded_setup>
            <easyexploded_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </easyexploded_write>
            <easyexploded_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </easyexploded_read>
        </resources>
        <blocks>
            <easyexploded>
                <class>Pollence_Easyexploded_Block</class>
            </easyexploded>
        </blocks>
        <helpers>
            <easyexploded>
                <class>Pollence_Easyexploded_Helper</class>
            </easyexploded>
        </helpers>
