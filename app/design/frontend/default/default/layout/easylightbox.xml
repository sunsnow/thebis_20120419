<?xml version="1.0" encoding="UTF-8"?>

<layout version="0.1.0">
    
    <catalog_product_view>
        <reference name="head">
            <action method="addItem" ifconfig="easy_lightbox/general/enabled"><type>skin_css</type><name>css/easylightbox.css</name></action>
            <action method="addItem" ifconfig="easy_lightbox/general/enabled"><type>skin_js</type><name>js/lightbox.js</name></action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="easy_lightbox/general/enabled"><template>easylightbox/media.phtml</template></action>
        </reference>
    </catalog_product_view>
    
    <review_product_list>
        <reference name="head">
            <action method="addItem" ifconfig="easy_lightbox/general/enabled"><type>skin_css</type><name>css/easylightbox.css</name></action>
            <action method="addItem" ifconfig="easy_lightbox/general/enabled"><type>skin_js</type><name>js/lightbox.js</name></action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="easy_lightbox/general/enabled"><template>easylightbox/media.phtml</template></action>
        </reference>
    </review_product_list>
    
</layout>